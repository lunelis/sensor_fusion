[
  {kernel, [

    {distributed, [{hera_synchronization, 0, [{
    }]}]},

    {sync_nodes_mandatory, []},

    {sync_nodes_optional, [
        sensor_fusion@lunelis,
        sensor_fusion@nav_1
    ]},

    {sync_nodes_timeout, 5000},
    {net_ticktime, 8},

    {logger, [
        %% Disk logger for error
        {handler, disk_log, logger_disk_log_h,
            #{config => #{
                file => "logs/error",
                type => wrap,
                max_no_files => 10,
                max_no_bytes => 1048576, % 10 x 1mb
                filesync_repeat_interval => 3000
            },
            level => error,
            formatter => {logger_formatter , #{single_line => false}}}
        }
    ]}
]},

{grisp , [
    {drivers , [
        {spi , grisp_spi_drv},
        {gpio , grisp_gpio_drv},
        {i2c , grisp_i2c_drv},
        {uart, grisp_termios_drv}
    ]} ,
    {devices , [
        % {spi1, pmod_gyro} all port devices need to be updated
        % {spi2, pmod_nav}
        % {spi2, pmod_als}
        % {uart, pmod_maxsonar}
    ]}
]}].
